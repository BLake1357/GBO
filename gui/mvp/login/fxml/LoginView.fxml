<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="2.0" vgap="5.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets top="5" right="5" bottom="5" left="5"/>
   </padding>
   <children>
      <Label text="Login-Kennung:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="loginName" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <Label text="Passwort:" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <PasswordField fx:id="password" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <Button fx:id="button" text="Login" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />
      <Label fx:id="status" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="4" />
   </children>
</GridPane>
